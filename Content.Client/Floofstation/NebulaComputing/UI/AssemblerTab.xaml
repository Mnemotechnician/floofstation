<controls:AssemblerTab
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.Floofstation.NebulaComputing.UI">

    <BoxContainer Orientation="Vertical" HorizontalExpand="True">
        <TextEdit Name="CodeEdit" Placeholder="Enter code here" MinWidth="400" MinHeight="200"/>

        <BoxContainer Orientation="Horizontal">
            <Button Name="RunButton" Text="Run"/>
            <Button Name="ClearOutputButton" Text="Clear Output"/>
        </BoxContainer>

        <Label Name="Output" HorizontalExpand="True" MinHeight="100"/>
    </BoxContainer>
</controls:AssemblerTab>
