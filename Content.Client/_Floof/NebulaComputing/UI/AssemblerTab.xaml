<controls:AssemblerTab
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._Floof.NebulaComputing.UI"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">

    <BoxContainer Orientation="Vertical" HorizontalExpand="True">
        <PanelContainer HorizontalExpand="True" Margin="8">
            <PanelContainer.PanelOverride>
                <graphics:StyleBoxFlat BackgroundColor="#202023" />
            </PanelContainer.PanelOverride>

            <Control>
                <TextEdit Name="CodeEdit" MinWidth="400" MinHeight="200"/>

                <Label
                    Name="CursorStats"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    HorizontalExpand="True"
                    Margin="2"/>
            </Control>
        </PanelContainer>

        <BoxContainer Orientation="Horizontal">
            <Button Name="RunButton" Text="Run"/>
            <Button Name="ClearOutputButton" Text="Clear Output"/>
        </BoxContainer>

        <PanelContainer HorizontalExpand="True" Margin="8">
            <PanelContainer.PanelOverride>
                <graphics:StyleBoxFlat BackgroundColor="#202023" />
            </PanelContainer.PanelOverride>

            <Label Name="Output" HorizontalExpand="True" MinHeight="50"/>
        </PanelContainer>
    </BoxContainer>
</controls:AssemblerTab>
